<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobSeekerAnnouncementDescription"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/BGColor"
        android:layout_weight="0.02"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.96"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المسمى الوظيفي"
            android:layout_gravity="end|right"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/job_seeker_announcement_description_job_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/text_view"
            android:gravity="center"
            android:textSize="25sp"/>

        <TextView
            android:layout_marginEnd="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="القسم"
            android:layout_gravity="end|right"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/job_seeker_announcement_description__job_department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/text_view"
            android:gravity="center"
            android:textSize="25sp"/>

        <TextView
            android:layout_marginEnd="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="وصف الوظيفة"
            android:layout_gravity="end|right"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/job_seeker_announcement_description__job_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/text_view"
            android:inputType="textMultiLine"
            android:gravity="center"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/job_seeker_announcement_description_btn_apply"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Apply"
            android:textColor="@color/White"
            android:background="@drawable/button"
            android:textSize="25sp"
            android:textAllCaps="false"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/BGColor"
        android:layout_weight="0.02"/>

</LinearLayout>