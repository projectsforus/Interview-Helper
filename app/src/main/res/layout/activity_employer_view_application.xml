<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployerViewApplication"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/BGColor"
        android:layout_weight="0.29">

        <ImageView
            android:id="@+id/imageView_view_application_user_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="56dp"
            android:background="@drawable/circle"
            android:src="@drawable/profile_pic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/job_seeker_view_application_user_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/job_seeker_view_application_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="86dp"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:text="Ahmed Sami"
            android:textColor="@color/White"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/job_seeker_view_application_user_mail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView_view_application_user_picture"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/job_seeker_view_application_user_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="79dp"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:text="ahmed@gmail.com"
            android:textColor="@color/White"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView_view_application_user_picture"
            app:layout_constraintTop_toBottomOf="@+id/job_seeker_view_application_user_name" />

    </android.support.constraint.ConstraintLayout>

    <ListView
        android:id="@+id/employer_view_application_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.69"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/BGColor"
        android:layout_weight="0.02"></LinearLayout>

</LinearLayout>